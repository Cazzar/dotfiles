#!/bin/zsh

BRANCH=$(git branch -a 2> /dev/null | grep "^* " | sed -e 's/^\* //')
if [[ "$BRANCH" == "(no branch)" ]]; then
  BRANCH=$(git name-rev HEAD 2> /dev/null | sed 's#HEAD \(.*\)#*\1#')
fi

if [[ -n "$BRANCH" ]]; then
  echo " $PR_LIGHT_BLACK""[$PR_NO_COLOR$PR_RED$BRANCH$PR_LIGHT_BLACK]$PR_NO_COLOR"
fi

